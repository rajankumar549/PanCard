
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>


<div id="form_start">
    <div id="msg"></div>
    <form id="register-form" method="post">
        <div class="form-horizontal">
            <div class="form-group form-group-sm">
                <label for="reg_fullname" class="col-sm-2">Full Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="reg_fullname" name="reg_fullname" placeholder="Full Name">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_father_name" class="col-sm-2">Father Name</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_father_name" name="reg_father_name" placeholder="Father Name">
                </div>
                <label for="reg_dob" class="col-sm-2">DOB</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" id="reg_dob" name="reg_dob" placeholder="Date Of birth">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_addhar_no" class="col-sm-2">Adhar No</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_addhar_no" name="reg_addhar_no" placeholder="Addhar No">
                </div>
                <label for="reg_pan_no" class="col-sm-2">Pan No</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_pan_no" name="reg_pan_no" placeholder="Pan No">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_mob1" class="col-sm-2">Mobile No.1</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_mob1" name="reg_mob1" placeholder="Mobile No 1">
                </div>
                <label for="reg_mob2" class="col-sm-2">Mobile No.2</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_mob2" name="reg_mob2" placeholder="Mobile No 2">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_whatsapp" class="col-sm-2">Whatsapp No</label>
                <div class="col-sm-4">
                    <select class="form-control" id="reg_whatsapp" name="reg_whatsapp">
                        <option value="Not apllicable" selected>No applicable</option>
                        <option value="Mobile No.1">Mobile No.1</option>
                        <option value="Mobile No.2">Mobile No.2</option>
                    </select>
                </div>
                <label for="reg_email" class="col-sm-2">Email</label>
                <div class="col-sm-4">
                    <input type="email" class="form-control" id="reg_email" name="reg_email" placeholder="Email">
                </div>
            </div>
            <div class="form-group form-group-sm">                
                <label for="reg_shop" class="col-sm-2">Shope No</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="reg_shop" name="reg_shop" placeholder="Shop Name">
                </div>
            </div>
            <h2>Current address</h2>
            <div class="form-group form-group-sm">
                <label for="reg_add" class="col-sm-2">Address</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="reg_add" name="reg_add" placeholder="Full address">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_city" class="col-sm-2">City</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="reg_city" name="reg_city" placeholder="City">
                </div>
                <label for="reg_state" class="col-sm-2">State</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="reg_state" name="reg_state" placeholder="State">
                </div>
                <label for="reg_pin" class="col-sm-2">Pin</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="reg_pin" name="reg_pin" placeholder="Pincode">
                </div>
            </div>
            <h2>Bank Detais</h2>
            <div class="form-group form-group-sm">
                <label for="reg_acc_name" class="col-sm-2">Bank account Name</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_acc_name" name="reg_acc_name" placeholder="Account Name">
                </div>
                <label for="reg_acc_no" class="col-sm-2">Bank Acc No</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_acc_no" name="reg_acc_no" placeholder="Account no">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_bank_name" class="col-sm-2">Bank Name</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_bank_name" name="reg_bank_name" placeholder="Bank name">
                </div>
                <label for="reg_ifsc" class="col-sm-2">IFSC Code</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="reg_ifsc" name="reg_ifsc" placeholder="IFSC Code">
                </div>
            </div>
            <h2>Documets</h2>
            <div class="form-group form-group-sm">
                <label for="reg_add_doc" class="col-sm-2">Adhar card</label>
                <div class="col-sm-4">
                    <input type="file" class="form-control" id="reg_add_doc" name="reg_add_doc" placeholder="username">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_pan_doc" class="col-sm-2">Pan Card</label>
                <div class="col-sm-4">
                    <input type="file" class="form-control" id="reg_pan_doc" name="reg_pan_doc" placeholder="username">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="reg_photo" class="col-sm-2">Photo</label>
                <div class="col-sm-4">
                    <input type="file" class="form-control" id="reg_photo" name="reg_photo" placeholder="username">
                </div>
            </div>
            </div>

        <button type="submit" class="form-control btn btn-success">Register</button>
    </form>
</div>


<script>
    $(document).ready(function () {
        $("#register-form").validate({
            rules: {
                reg_fullname: "required",
                reg_father_name: "required",
                reg_dob: "required",
                reg_addhar_no: "required",
                reg_pan_no: "required",
                reg_mob1: "required",
                reg_email: {
                    required: true,
                    email: true
                },
                reg_shop: "required",
                reg_add: "required",
                reg_city: "required",
                reg_state: "required",
                reg_pin: "required",
                reg_acc_name: "required",
                reg_acc_no: "required",
                reg_bank_name: "required",
                reg_ifsc: "required",
                reg_add_doc: "required",
                reg_pan_doc: "required",
                reg_pan_photo: "required"
            },
            errorClass: "form-invalid",
            errorPlacement: function (label, element) {
                    if (element.attr("type") === "checkbox" || element.attr("type") === "radio") {
                        element.parent().append(label); // this would append the label after all your checkboxes/labels (so the error-label will be the last element in <div class="controls"> )
                    }
                    else {
                        label.insertAfter(element); // standard behaviour
                    }

                }
            
        });
    });

</script>

